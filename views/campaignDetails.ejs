<%- layout('layouts/boilerplate') %>

<%- include('partials/flash') %>


<div class="campaign-details-wrapper">
  <div class="campaign-details-card">
    <div class="top-actions">
    <form action="/campaigns/<%= campaign._id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this campaign?');">
      <button type="submit" class="btn btn-outline">Delete</button>
    </form>
  </div>
    <h2>Campaign: <%= campaign.name %></h2>
    

    <div class="campaign-info">
      <p><strong>Start Date:</strong> <%= new Date(campaign.startDate).toLocaleDateString() %></p>
      <p><strong>End Date:</strong> <%= new Date(campaign.endDate).toLocaleDateString() %></p>
      <p><strong>Gender:</strong> <%= campaign.gender %></p>
      <p><strong>Age Range:</strong> <%= campaign.ageRange %></p>
      <p><strong>Income Group:</strong> <%= campaign.incomeGroup %></p>
      <p><strong>Product Name:</strong> <%= campaign.productName %></p>
      <p><strong>Product Details:</strong> <%= campaign.productDetails %></p>
      <p><strong>Goal:</strong> <%= campaign.goal %></p>
      <p><strong>Engagement Type:</strong> <%= campaign.engagementType %></p>
      <p><strong>Target Audience:</strong> <%= campaign.targetAudience %></p>
      <p><strong>Target Location:</strong> <%= campaign.targetLocation %></p>
    </div>

    <a href="/campaigns/selectc" class="btn btn-primary">Go to Your Campaigns</a>


    
  </div>
</div>

<style>
  body {
    background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.6)),
                url('/uploads/clubs/1746288248790-791790165.jpg') no-repeat center center fixed;
    background-size: cover;
    font-family: 'Poppins', sans-serif;
    color: #fff;
    margin: 0;
    padding: 0;
  }

  .btn-danger {
  background: linear-gradient(90deg, #ff4b4b, #ff6666);
  color: #fff;
  box-shadow: 0 4px 16px rgba(255, 75, 75, 0.4);
  border: none;
}

.btn-danger:hover {
  transform: scale(1.04);
  box-shadow: 0 6px 24px rgba(255, 75, 75, 0.6);
}

  .campaign-details-wrapper {
    max-width: 800px;
    margin: 80px auto;
    padding: 20px;
  }

  .campaign-details-card {
    background: rgba(255, 255, 255, 0.06);
    border-radius: 18px;
    padding: 30px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(12px);
    position: relative;
  }

  .btn {
  position: relative;
  z-index: 10;
}
  .campaign-details-card::before {
    content: "";
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    border-radius: 20px;
    background: linear-gradient(135deg, rgba(255,153,102,0.3), rgba(255,106,106,0.3));
    z-index: 0;
    filter: blur(12px);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .campaign-details-card:hover::before {
    opacity: 0.4;
  }

  .campaign-details-card h2 {
    font-size: 2rem;
    margin-bottom: 24px;
    color: #ff9966;
    position: relative;
    z-index: 1;
  }

  .campaign-info p {
    margin-bottom: 10px;
    font-size: 1.05rem;
    position: relative;
    z-index: 1;
  }

  .btn {
    padding: 10px 18px;
    border-radius: 10px;
    font-weight: 500;
    text-decoration: none;
    text-align: center;
    transition: all 0.3s ease;
    font-size: 0.95rem;
    border-color: #fff;
    display: inline-block;
    margin-top: 20px;
  }

  .btn-primary {
    background: linear-gradient(90deg, #ff6a6a, #ff9966);
    color: #fff;
    box-shadow: 0 4px 16px rgba(255, 106, 106, 0.4);
  }

  .btn-primary:hover {
    transform: scale(1.04);
    box-shadow: 0 6px 24px rgba(255, 106, 106, 0.6);
    border-color: #ff6a6a;
  }

  .flash-success, .flash-error {
    padding: 10px;
    margin: 10px auto;
    border-radius: 6px;
    font-weight: bold;
    transition: opacity 0.5s ease;
    max-width: 800px;
    text-align: center;
  }

  .flash-success {
    background-color: #d4edda;
    color: #155724;
  }

  .flash-error {
    background-color: #f8d7da;
    color: #721c24;
  }

  .fade-out {
    opacity: 0;
  }

  @media (max-width: 768px) {
    .campaign-details-wrapper {
      padding: 10px;
    }
    .campaign-details-card {
      padding: 20px;
    }
  }
  .top-actions {
  position: absolute;
  top: 20px;
  right: 20px;
  z-index: 2;
}

.top-actions .btn {
  pointer-events: auto;
  display: inline-block;
  width: 10rem;
}

.btn-outline {
  border: 1px solid #ff9966;
  color: #ff9966;
  background: transparent;
}

.btn-outline:hover {
  background-color: rgba(255, 153, 102, 0.2);
  transform: scale(1.04);
}
@media (max-width: 768px) {
  .campaign-details-wrapper {
    padding: 10px;
    margin: 40px 10px;
  }

  .campaign-details-card {
    padding: 18px;
  }

  .campaign-details-card h2 {
    font-size: 1.5rem;
    margin-bottom: 18px;
  }

  .campaign-info p {
    font-size: 0.95rem;
    margin-bottom: 8px;
  }

  .top-actions {
    position: static;
    text-align: right;
    margin-bottom: 15px;
  }

  .top-actions form {
    display: inline-block;
  }

  .top-actions .btn {
    width: auto;
    padding: 8px 14px;
    font-size: 0.9rem;
  }

  .btn {
    font-size: 0.9rem;
    padding: 10px 16px;
    width: 100%;
  }

  .btn-primary {
    display: block;
    margin-top: 20px;
  }
}


</style>

<script>
  setTimeout(() => {
    const success = document.querySelector('.flash-success');
    const error = document.querySelector('.flash-error');
    if (success) success.classList.add('fade-out');
    if (error) error.classList.add('fade-out');
  }, 3500);

  setTimeout(() => {
    document.querySelectorAll('.flash-success, .flash-error').forEach(el => el.remove());
  }, 4500);
</script>
