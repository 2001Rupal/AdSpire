<%- layout('layouts/boilerplate') %>

<section id="register">
  <div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="form-wrapper p-4 rounded-4 shadow-lg w-100" style="max-width: 950px;">
      <h2 class="text-center mb-4">Add Inventory</h2>
      <form action="/club/inventory/add" method="POST" enctype="multipart/form-data" class="row g-4">

        <div class="col-md-6">
          <label>Inventory Name*</label>
          <input type="text" class="form-control" name="name" required placeholder="Enter Inventory Name">
        </div>

        <div class="col-md-6">
          <label>Spot</label>
          <input type="text" class="form-control" name="spot" placeholder="Spot">
        </div>

        <div class="col-md-6">
          <label>360 View Link</label>
          <input type="text" class="form-control" name="view360Link" placeholder="https://360view.com">
        </div>

        <div class="col-md-6">
          <label>Availability</label>
          <input type="text" class="form-control" name="availability" placeholder="e.g. Weekends, Evenings">
        </div>

        <div class="col-md-6">
          <label>Reach</label>
          <input type="text" class="form-control" name="reach" placeholder="e.g. 10,000+ monthly">
        </div>

        <div class="col-md-6">
          <label>Dimensions</label>
          <input type="text" class="form-control" name="dimensions" placeholder="e.g. 10ft x 5ft">
        </div>

        <div class="col-md-12">
          <label>Description</label>
          <textarea class="form-control" name="description" rows="2" placeholder="Brief description"></textarea>
        </div>

        <div class="col-md-12">
          <label>Exclusion Details</label>
          <textarea class="form-control" name="exclusionDetails" rows="2" placeholder="Mention any exclusions"></textarea>
        </div>

        <div class="col-md-12">
          <label>Guidelines</label>
          <textarea class="form-control" name="guidelines" rows="2" placeholder="Specify guidelines"></textarea>
        </div>

        <div class="col-md-12">
          <label>Inventory Media (Images/Videos)</label>
            <div class="dropzone text-center p-3 border border-dashed rounded">
          <input type="file" class="form-control" name="media" multiple accept="image/*,video/*">
            <small class="text-warning d-block mt-1">You can upload up to 10 files (images or videos).</small>
            </div>
        </div>

        <hr class="mt-3">
        <div class="col-md-12">
          <h4 class="text-light">Sub-Inventories</h4>
          <div id="subInventoryContainer">
            <div class="row subInventoryGroup">
              <div class="col-md-6">
                <input type="text" class="form-control mb-2" name="subInventories[0][name]" placeholder="Sub-Inventory Name" required>
              </div>
            </div>
          </div>
          <button type="button" class="btn btn-secondary mt-2" onclick="addSubInventory()">+ Add More Sub-Inventory</button>
        </div>

        <div class="col-12 text-center mt-3">
          <button type="submit" class="btn btn-primary px-5">Add Inventory</button>
        </div>
      </form>
    </div>
  </div>
</section>

<script>
let subInventoryIndex = 1;
function addSubInventory() {
  const container = document.getElementById('subInventoryContainer');
  const html = `
    <div class="row subInventoryGroup mt-2">
      <div class="col-md-6">
        <input type="text" class="form-control" name="subInventories[${subInventoryIndex}][name]" placeholder="Sub-Inventory Name" required>
      </div>
    </div>
  `;
  container.insertAdjacentHTML('beforeend', html);
  subInventoryIndex++;
}
</script>
<script>
  document.querySelector('form').addEventListener('submit', function (e) {
    const files = document.querySelector('input[name="media"]').files;
    if (files.length > 10) {
      alert("Please upload no more than 10 files.");
      e.preventDefault(); // prevent form submission
    }
  });
</script>


