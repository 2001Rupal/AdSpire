<%- layout('layouts/boilerplate') %>

<section id="edit-club-profile">
  <div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="form-wrapper p-4 rounded-4 shadow-lg w-100" style="max-width: 950px;">
      <h2 class="text-center mb-4">Edit Club Profile</h2>

      <form action="/club/edit-profile" method="POST" enctype="multipart/form-data" class="row g-4">
        <!-- Basic Info -->
        <div class="col-md-6">
          <label>Name*</label>
          <input type="text" name="name" class="form-control" value="<%= club.name %>" required>
        </div>

        <div class="col-md-6">
          <label>Email*</label>
          <input type="email" name="email" class="form-control" value="<%= club.email %>" required>
        </div>

        <div class="col-md-6">
          <label>Contact Number*</label>
          <input type="text" name="contactNumber" class="form-control" value="<%= club.contactNumber %>" required>
        </div>

        <div class="col-md-6">
          <label>Membership Fee Range</label>
          <input type="text" name="membershipFeeRange" class="form-control" value="<%= club.membershipFeeRange %>">
        </div>

        <div class="col-md-6">
          <label>Location</label>
          <input type="text" name="location" class="form-control" value="<%= club.location %>">
        </div>

        <div class="col-md-6">
          <label>Website</label>
          <input type="url" name="website" class="form-control" value="<%= club.website %>">
        </div>

        <div class="col-md-12">
          <label>Description</label>
          <textarea name="description" rows="4" class="form-control"><%= club.description %></textarea>
        </div>

        <div class="col-md-6">
          <label>View 360 Link</label>
          <input type="url" name="view360Link" class="form-control" value="<%= club.view360Link %>">
        </div>

        <div class="col-md-6">
          <label>Sponsors (comma separated)</label>
          <input type="text" name="sponsors" class="form-control" value="<%= club.sponsors.join(', ') %>">
        </div>

        <div class="col-md-6">
          <label>Total Members</label>
          <input type="number" name="totalMembers" class="form-control" value="<%= club.totalMembers %>">
        </div>

        <div class="col-md-6">
          <label>Age Range</label>
          <input type="text" name="ageRange" class="form-control" value="<%= club.ageRange %>">
        </div>

        <div class="col-md-6">
          <label>Reach</label>
          <input type="text" name="reach" class="form-control" value="<%= club.reach %>">
        </div>

        <div class="col-md-6">
          <label>Availability</label>
          <input type="text" name="availability" class="form-control" value="<%= club.availability %>">
        </div>

        <div class="col-md-6">
          <label>Segment</label>
          <input type="text" name="segment" class="form-control" value="<%= club.segment %>">
        </div>

        <div class="col-md-6">
          <label>Industry</label>
          <input type="text" name="industry" class="form-control" value="<%= club.industry %>">
        </div>

        <div class="col-md-12">
          <label>Segment Tags (comma separated)</label>
          <input type="text" name="segmentTags" class="form-control" value="<%= club.segmentTags.join(', ') %>">
        </div>

        <% if (club.media && club.media.length > 0) { %>
          <div class="col-md-12">
            <label>Current Media (select to delete)</label>
            <div class="d-flex flex-wrap gap-3">
              <% club.media.forEach((file, index) => { %>
                <div>
                  <% if (file.endsWith('.mp4')) { %>
                    <video src="<%= file %>" width="100" controls class="rounded shadow"></video>
                  <% } else { %>
                    <img src="<%= file %>" width="100" height="100" class="rounded shadow" style="object-fit: cover;">
                  <% } %>
                  <div class="form-check text-danger mt-1">
                    <input class="form-check-input" type="checkbox" name="deleteMedia[]" value="<%= file %>">
                    <label class="form-check-label">Delete</label>
                  </div>
                </div>
              <% }) %>
            </div>
          </div>
        <% } %>

        <div class="col-md-12">
          <label>Add More Media</label>
          <input type="file" name="media" class="form-control" multiple accept="image/*,video/*">
        </div>

        <div class="col-12 text-center mt-3">
          <button type="submit" class="btn btn-primary px-5">Save Changes</button>
        </div>
      </form>
    </div>
  </div>
</section>

<style>
  body {
    background: url('/uploads/clubs/1746288248790-791790165.jpg') no-repeat center center fixed;
    background-size: cover;
    background-attachment: fixed;
    font-family: 'Poppins', sans-serif;
  }

  #edit-club-profile {
    padding: 60px 0;
    color: #fff;
  }

  #edit-club-profile h2 {
    font-size: 2rem;
    font-weight: 600;
    color: #ffffff;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.6);
  }

  .form-wrapper {
    background: rgba(28, 28, 28, 0.5);
    backdrop-filter: blur(12px);
    border-radius: 20px;
    box-shadow: 0 12px 48px rgba(0, 0, 0, 0.5);
  }

  #edit-club-profile label {
    font-weight: 500;
    margin-bottom: 6px;
    color: #f0f0f0;
  }

  #edit-club-profile .form-control {
    background-color: rgba(255, 255, 255, 0.08);
    color: #fff;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    padding: 10px 15px;
    transition: all 0.3s ease;
  }

  #edit-club-profile .form-control:focus {
    background-color: rgba(255, 255, 255, 0.12);
    border-color: #ff6a6a;
    box-shadow: 0 0 0 0.2rem rgba(255, 106, 106, 0.25);
    color: #fff;
  }

  #edit-club-profile .btn-primary {
    background: linear-gradient(90deg, #ff6a6a, #ff9966);
    border: none;
    border-radius: 12px;
    padding: 12px 30px;
    font-weight: 600;
    box-shadow: 0 6px 20px rgba(255, 106, 106, 0.3);
    transition: all 0.3s ease-in-out;
  }

  #edit-club-profile .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(255, 106, 106, 0.5);
  }
</style>
