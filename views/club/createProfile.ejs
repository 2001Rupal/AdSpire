<%- layout('layouts/boilerplate') %>

<section id="register">
  <div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="form-wrapper p-4 rounded-4 shadow-lg w-100" style="max-width: 950px;">
      <h2 class="text-center mb-4">Create Club Profile</h2>
      <form action="/club/create-profile" method="POST" enctype="multipart/form-data" class="row g-4">

        <div class="col-md-6">
          <label>Club Name*</label>
          <input type="text" class="form-control" name="name" required placeholder="Enter Club Name">
        </div>

        <div class="col-md-6">
          <label>Email</label>
          <input type="email" class="form-control" name="email" placeholder="Enter Email Address">
        </div>

        <div class="col-md-6">
          <label>Contact Number</label>
          <input type="text" class="form-control" name="contactNumber" placeholder="Enter Contact Number">
        </div>

        <div class="col-md-6">
          <label>Location</label>
          <input type="text" class="form-control" name="location" placeholder="Enter Location">
        </div>

        <div class="col-md-6">
          <label>Membership Fee Range</label>
          <input type="text" class="form-control" name="membershipFeeRange" placeholder="e.g. ₹1000 - ₹5000 / month">
        </div>

        <div class="col-md-6">
          <label>Website</label>
          <input type="url" class="form-control" name="website" placeholder="https://example.com" title="Please enter a valid URL starting with http:// or https://">
        </div>

        <div class="col-md-12">
          <label>Description</label>
          <textarea class="form-control" name="description" rows="2" placeholder="Describe the club briefly"></textarea>
        </div>

        <div class="col-md-6">
          <label>360° View Link</label>
          <input type="url" class="form-control" name="view360Link" placeholder="https://360view.com">
        </div>

        <div class="col-md-6">
          <label>Sponsors (comma-separated)</label>
          <input type="text" class="form-control" name="sponsors" placeholder="e.g. Sponsor1, Sponsor2">
        </div>

        <div class="col-md-6">
          <label>Total Members</label>
          <input type="number" class="form-control" name="totalMembers" placeholder="e.g. 1200">
        </div>

        <div class="col-md-6">
          <label>Age Range</label>
          <input type="text" class="form-control" name="ageRange" placeholder="e.g. 18-35">
        </div>

        <div class="col-md-6">
          <label>Reach</label>
          <input type="text" class="form-control" name="reach" placeholder="e.g. 10,000+ monthly">
        </div>

        <div class="col-md-6">
          <label>Availability</label>
          <input type="text" class="form-control" name="availability" placeholder="e.g. Weekends, Evenings">
        </div>

        <div class="col-md-6">
          <label>Segment</label>
          <input type="text" class="form-control" name="segment" placeholder="e.g. Premium / Mid-Tier">
        </div>

        <div class="col-md-6">
          <label>Industry</label>
          <input type="text" class="form-control" name="industry" placeholder="e.g. Fitness, Nightlife">
        </div>

        <div class="col-md-12">
          <label>Upload Media (Images/Videos)</label>
          <input type="file" class="form-control" name="media" accept="image/*,video/*" multiple>
        </div>

        <div class="col-12 text-center mt-3">
          <button type="submit" class="btn btn-primary px-5">Submit</button>
        </div>
      </form>
    </div>
  </div>
</section>
<style>
  body {
    background: url('/uploads/clubs/1746288248790-791790165.jpg') no-repeat center center fixed;
    background-size: cover;
    background-attachment: fixed;
    font-family: 'Poppins', sans-serif;
  }

  #register {
    padding: 60px 0;
    color: #fff;
  }

  #register h2 {
    font-size: 2rem;
    font-weight: 600;
    color: #ffffff;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.6);
  }

  .form-wrapper {
    background: rgba(28, 28, 28, 0.5);
    backdrop-filter: blur(12px);
    border-radius: 20px;
    box-shadow: 0 12px 48px rgba(0, 0, 0, 0.5);
  }

  #register label {
    font-weight: 500;
    margin-bottom: 6px;
    color: #f0f0f0;
  }

  #register .form-control,
  #register .form-select {
    background-color: rgba(255, 255, 255, 0.08);
    color: #fff;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    padding: 10px 15px;
    transition: all 0.3s ease;
  }

  #register .form-control::placeholder {
    color: #ccc;
  }

  #register .form-control:focus,
  #register .form-select:focus {
    background-color: rgba(255, 255, 255, 0.12);
    border-color: #ff6a6a;
    box-shadow: 0 0 0 0.2rem rgba(255, 106, 106, 0.25);
    color: #fff;
  }

  #register .form-check-label {
    color: #ddd;
  }

  #register .btn-primary {
    background: linear-gradient(90deg, #ff6a6a, #ff9966);
    border: none;
    border-radius: 12px;
    padding: 12px 30px;
    font-weight: 600;
    box-shadow: 0 6px 20px rgba(255, 106, 106, 0.3);
    transition: all 0.3s ease-in-out;
  }

  #register .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(255, 106, 106, 0.5);
  }

  @media (max-width: 768px) {
    #register h2 {
      font-size: 1.6rem;
    }
  }

  #register .form-select {
    background-color: rgba(255, 255, 255, 0.12) !important;
    color: #fff !important;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    padding: 10px 15px;
  }

  #register .form-select option {
    background-color: rgba(84, 82, 82, 0.95);
    color: #fff;
  }

  #register .form-select option:hover,
  #register .form-select option:checked {
    background-color: rgba(255, 106, 106, 0.2);
    color: #fff;
  }
</style>
