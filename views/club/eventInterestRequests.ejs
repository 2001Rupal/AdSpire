<%- layout('layouts/boilerplate') %>

<div class="inventory-container">
  <h2 class="inventory-heading"> Interest Requests for Event: <%= eventName %></h2>

  <% if (interestRequests.length === 0) { %>
    <div class="text-center py-5">
      <p class="fs-5">No interest requests found for this event.</p>
      <a href="/club/special-events" class="edit-btn mt-3">‚Üê Back to Events</a>
    </div>
  <% } else { %>
    <div class="inventory-table-wrapper">
      <table class="inventory-table">
        <thead>
          <tr>
            <th>Brand Name</th>
            <th>Email</th>
            <th>Contact</th>
            <th>Message</th>
            <th>Requested On</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% interestRequests.forEach(request => { %>
            <tr>
              <td><%= request.brandId?.brandName || 'Anonymous' %></td>
              <td><%= request.brandId?.email || 'N/A' %></td>
              <td><%= request.brandId?.contactNumber || 'N/A' %></td>
              <td><%= request.message || 'No message provided' %></td>
              <td><%= new Date(request.createdAt).toLocaleString() %></td>
              <td>
                <div class="action-buttons">
                  <% if (request.status !== 'Done') { %>
                    <form action="/club/special-events/<%= eventId %>/interests/<%= request._id %>/mark-done" method="POST">
                      <button class="edit-btn">‚úÖ  Done</button>
                    </form>
                  <% } else { %>
                    <span style="color: lightgreen; font-weight: bold;">‚úî Done</span>
                  <% } %>
                  <form action="/club/special-events/<%= eventId %>/interests/<%= request._id %>/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this request?');">
                    <button class="delete-btn">üóëÔ∏è Ignore</button>
                  </form>
                </div>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <div class="text-center mt-4">
      <a href="/club/special-events" class="edit-btn">‚Üê Back to Events</a>
    </div>
  <% } %>
</div>

<style>
  body {
    background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.85)),
      url('/uploads/clubs/1746288248790-791790165.jpg') no-repeat center center fixed;
    background-size: cover;
    font-family: 'Poppins', sans-serif;
    color: #fff;
    margin: 0;
    padding: 0;
  }

  .inventory-container {
    max-width: 1100px;
    margin: 80px auto;
    padding: 24px;
  }

  .inventory-heading {
    font-size: 2.5rem;
    text-align: center;
    margin-bottom: 50px;
    font-weight: 600;
    text-shadow: 2px 2px 12px rgba(0, 0, 0, 0.6);
    color: #ffdaae;
  }

  .inventory-table-wrapper {
    background: rgba(255, 255, 255, 0.06);
    backdrop-filter: blur(16px);
    border-radius: 20px;
    overflow-x: auto;
    border: 1px solid rgba(255, 255, 255, 0.12);
    box-shadow: 0 16px 36px rgba(0, 0, 0, 0.35);
  }

  .inventory-table {
    width: 100%;
    border-collapse: collapse;
    color: #fff;
  }

  .inventory-table thead {
    background: rgba(255, 255, 255, 0.08);
  }

  .inventory-table th {
    padding: 18px;
    font-size: 1rem;
    text-align: left;
    font-weight: 600;
    border-bottom: 1px solid rgba(255, 255, 255, 0.15);
  }

  .inventory-table td {
    padding: 16px 18px;
    font-size: 1rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.07);
    vertical-align: middle;
  }

  .inventory-table tr:hover {
    background-color: rgba(255, 255, 255, 0.05);
    transition: background-color 0.2s ease;
  }


  .action-buttons {
  display: flex;
  flex-direction: row;
  gap: 8px;
  justify-content: flex-start;
  flex-wrap: nowrap;
}
  

  .edit-btn,
  .delete-btn {
    display: inline-block;
    padding: 8px 16px;
    font-size: 0.9rem;
    font-weight: 500;
    border: none;
    border-radius: 999px;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .edit-btn {
    color: #fff;
    background: rgba(96, 165, 250, 0.15);
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.25);
  }

  .edit-btn:hover {
    text-decoration: none;
    color: #fff;
    background: rgba(96, 165, 250, 0.35);
    transform: translateY(-1px) scale(1.03);
    box-shadow: 0 6px 16px rgba(59, 130, 246, 0.4);
  }

  .delete-btn {
    color: #fff;
    background: rgba(239, 68, 68, 0.15);
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 12px rgba(239, 68, 68, 0.25);
  }

  .delete-btn:hover {
    background: rgba(239, 68, 68, 0.35);
    transform: translateY(-1px) scale(1.03);
    box-shadow: 0 6px 16px rgba(239, 68, 68, 0.4);
  }

  .inventory-table th:last-child,
.inventory-table td:last-child {
  min-width: 200px; /* or width: 220px; */
}

  @media (max-width: 768px) {
    .inventory-heading {
      font-size: 2.2rem;
    }

    .inventory-table th,
    .inventory-table td {
      padding: 12px;
      font-size: 0.9rem;
    }

    .edit-btn,
    .delete-btn {
      font-size: 0.8rem;
      padding: 6px 12px;
    }

    .action-buttons {
    flex-direction: column;
    align-items: flex-start;
  }
  }
</style>
