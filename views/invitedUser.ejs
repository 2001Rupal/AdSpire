<%- layout('layouts/boilerplate') %>
<%- include('partials/flash') %>

<section id="invite-user">
  <div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="form-wrapper p-4 rounded-4 shadow-lg w-100" style="max-width: 650px;">
      <h2 class="text-center mb-4">Invite User</h2>

      

      <form class="row g-4" action="/invite" method="POST">
        <div class="col-md-6">
          <label>User Name</label>
          <input type="text" class="form-control" name="name" required placeholder="Enter User Name" />
        </div>
        <div class="col-md-6">
          <label>Email</label>
          <input type="email" class="form-control" name="email" required placeholder="Email" />
        </div>
        <div class="col-md-6">
          <label>Contact Number</label>
          <input type="text" class="form-control" name="contactNumber" placeholder="Contact Number" />
        </div>
        <div class="col-md-6">
          <label>Assign Role</label>
          <select class="form-select" name="role" required>
            <option disabled selected>Select Role</option>
            <option value="Admin">Admin</option>
            <option value="Viewer">Viewer</option>
            <option value="Editor">Editor</option>
            <option value="Manager">Manager</option>
          </select>
        </div>
        <div class="col-md-6">
          <label>Designation</label>
          <input type="text" class="form-control" name="designation" placeholder="Designation" />
        </div>
        <div class="col-md-6">
          <label>Assign For <span style="font-size: 0.8em;">(optional)</span></label>
          <select class="form-select" name="assignedCampaign">
            <option value="">Select campaign name</option>
            <% campaigns.forEach(c => { %>
              <option value="<%= c._id %>"><%= c.name %></option>
            <% }) %>
          </select>
        </div>
        <div class="col-12 text-center">
          <button type="submit" class="btn btn-primary px-5">Submit</button>
        </div>
      </form>
    </div>
  </div>
</section>

<style>
  body {
    background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.6)),
                url('/uploads/clubs/1746288248790-791790165.jpg') no-repeat center center fixed;
    background-size: cover;
    font-family: 'Poppins', sans-serif;
  }

  #invite-user {
    padding: 60px 0;
    color: #fff;
  }

  #invite-user h2 {
    font-size: 2rem;
    font-weight: 600;
    color: #ffffff;
    text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.6);
  }

  .form-wrapper {
 background: rgba(255, 255, 255, 0.06); /* lighter glassy tone */
  backdrop-filter: blur(14px) brightness(1.2);
  border-radius: 20px;
  border: 1px solid rgba(255, 255, 255, 0.1);
  box-shadow: 0 12px 40px rgba(0, 0, 0, 0.35);
  min-height: 560px;  /* adjust as needed */
  padding: 40px 30px;
  }
#invite-user .container {
  padding-top: 40px;
  padding-bottom: 40px;
}
  #invite-user label {
    font-weight: 500;
    margin-bottom: 6px;
    color: #f0f0f0;
  }

  #invite-user .form-control,
  #invite-user .form-select {
    background-color: rgba(255, 255, 255, 0.08);
    color: #fff;
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 10px;
    padding: 10px 15px;
    transition: all 0.3s ease;
  }

  #invite-user .form-control::placeholder {
    color: #ccc;
  }

  #invite-user .form-control:focus,
  #invite-user .form-select:focus {
    background-color: rgba(255, 255, 255, 0.12);
    border-color: #ff6a6a;
    box-shadow: 0 0 0 0.2rem rgba(255, 106, 106, 0.25);
    color: #fff;
  }

  #invite-user .btn-primary {
    background: linear-gradient(90deg, #ff6a6a, #ff9966);
    border: none;
    margin-top: 2rem;
    border-radius: 12px;
    padding: 12px 30px;
    font-weight: 600;
    box-shadow: 0 6px 20px rgba(255, 106, 106, 0.3);
    transition: all 0.3s ease-in-out;
  }

  #invite-user .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(255, 106, 106, 0.5);
  }

  .flash-success,
  .flash-error {
    max-width: 650px;
    margin: 10px auto;
    padding: 12px;
    border-radius: 6px;
    font-weight: bold;
    text-align: center;
    opacity: 1;
    transition: opacity 0.5s ease;
  }

  .flash-success {
    background-color: #3c5e4e;
    color: #d4f7e1;
  }

  .flash-error {
    background-color: #7d2f2f;
    color: #ffdede;
  }
  
#invite-user select.form-select option {
  background-color: #1f1f1f;
  color: #fff;
}
#invite-user select.form-select option:hover {
  background-color: rgba(255, 153, 102, 0.2);
}
@media (max-width: 768px) {
  #invite-user h2 {
    font-size: 1.5rem;
  }

  .form-wrapper {
    padding: 25px 20px;
    min-height: auto;
  }

  #invite-user .container {
    padding-top: 20px;
    padding-bottom: 20px;
  }

  form.row.g-4 {
    gap: 1rem !important;
  }

  .form-control,
  .form-select {
    font-size: 0.95rem;
    padding: 10px 12px;
  }

  .btn-primary {
    width: 100%;
    font-size: 1rem;
    padding: 10px 0;
  }

  #invite-user label {
    font-size: 0.9rem;
  }

  .flash-success,
  .flash-error {
    font-size: 0.95rem;
    margin-left: 15px;
    margin-right: 15px;
  }
}

</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const success = document.querySelector('.flash-success');
    const error = document.querySelector('.flash-error');

    if (success) {
      setTimeout(() => success.style.opacity = '0', 3500);
      setTimeout(() => success.remove(), 4500);
    }

    if (error) {
      setTimeout(() => error.style.opacity = '0', 3500);
      setTimeout(() => error.remove(), 4500);
    }
  });
</script>
