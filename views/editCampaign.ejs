<%- layout('layouts/boilerplate') %>

<section id="edit-campaign">
  <div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="form-wrapper p-4 rounded-4 shadow-lg w-100" style="max-width: 950px;">
      <h2 class="text-center mb-4">Edit Campaign</h2>

      <form action="/campaigns/<%= campaign._id %>/edit" method="POST" class="row g-4 needs-validation" novalidate>

        <!-- Campaign Name -->
        <div class="col-md-6">
          <label>Brand / Campaign Name*</label>
          <input type="text" class="form-control" name="name" required placeholder="Enter Campaign Name" value="<%= campaign.name %>">
        </div>

        <!-- Gender -->
        <div class="col-md-6">
  <label>Gender*</label>
  <div class="gender-group">
    <div class="form-check">
      <input class="form-check-input" type="radio" name="gender" value="Male" <%= campaign.gender === 'Male' ? 'checked' : '' %> >
      <label class="form-check-label">Male</label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="gender" value="Female" <%= campaign.gender === 'Female' ? 'checked' : '' %> >
      <label class="form-check-label">Female</label>
    </div>
    <div class="form-check">
      <input class="form-check-input" type="radio" name="gender" value="Both" <%= campaign.gender === 'Both' ? 'checked' : '' %> >
      <label class="form-check-label">Both</label>
    </div>
  </div>
</div>

        <!-- Start Date -->
        <div class="col-md-6">
          <label>Start Date*</label>
          <input type="date" class="form-control" name="startDate" required value="<%= campaign.startDate.toISOString().split('T')[0] %>">
        </div>

        <!-- End Date -->
        <div class="col-md-6">
          <label>End Date*</label>
          <input type="date" class="form-control" name="endDate" required value="<%= campaign.endDate.toISOString().split('T')[0] %>">
        </div>

        <!-- Age Range -->
        <div class="col-md-6">
          <label>Age Range* (Years)</label>
          <select class="form-select" name="ageRange" required>
            <option disabled>Select Age Range</option>
            <option value="13-18" <%= campaign.ageRange === '13-18' ? 'selected' : '' %>>13-18</option>
            <option value="18-24" <%= campaign.ageRange === '18-24' ? 'selected' : '' %>>18-24</option>
            <option value="25-34" <%= campaign.ageRange === '25-34' ? 'selected' : '' %>>25-34</option>
            <option value="35-44" <%= campaign.ageRange === '35-44' ? 'selected' : '' %>>35-44</option>
            <option value="45+" <%= campaign.ageRange === '45+' ? 'selected' : '' %>>45+</option>
          </select>
        </div>

        <!-- Income Group -->
        <div class="col-md-6">
          <label>Target Income Group*</label>
          <select class="form-select" name="incomeGroup" required>
            <option disabled>Select Income Group</option>
            <option value="Low" <%= campaign.incomeGroup === 'Low' ? 'selected' : '' %>>Low</option>
            <option value="Middle" <%= campaign.incomeGroup === 'Middle' ? 'selected' : '' %>>Middle</option>
            <option value="High" <%= campaign.incomeGroup === 'High' ? 'selected' : '' %>>High</option>
          </select>
        </div>

        <!-- Product Name -->
        <div class="col-md-6">
          <label>Product Name*</label>
          <input type="text" class="form-control" name="productName" required value="<%= campaign.productName %>" placeholder="Enter Product Name">
        </div>

        <!-- Goal -->
        <div class="col-md-6">
          <label>Goal*</label>
          <select class="form-select" name="goal" required>
            <option disabled>Select Goal</option>
            <option value="Brand Awareness" <%= campaign.goal === 'Brand Awareness' ? 'selected' : '' %>>Brand Awareness</option>
            <option value="Lead Generation" <%= campaign.goal === 'Lead Generation' ? 'selected' : '' %>>Lead Generation</option>
            <option value="Sales" <%= campaign.goal === 'Sales' ? 'selected' : '' %>>Sales</option>
            <option value="App Downloads" <%= campaign.goal === 'App Downloads' ? 'selected' : '' %>>App Downloads</option>
          </select>
        </div>

        <!-- Product Details -->
        <div class="col-md-12">
          <label>Product Details</label>
          <textarea class="form-control" name="productDetails" rows="2" placeholder="Enter Product Details"><%= campaign.productDetails %></textarea>
        </div>

        <!-- Engagement Type -->
        <div class="col-md-6">
          <label>Type of Engagement*</label>
          <select class="form-select" name="engagementType" required>
            <option disabled>Select Engagement</option>
            <option value="Influencer Collaboration" <%= campaign.engagementType === 'Influencer Collaboration' ? 'selected' : '' %>>Influencer Collaboration</option>
            <option value="UGC Campaign" <%= campaign.engagementType === 'UGC Campaign' ? 'selected' : '' %>>UGC Campaign</option>
            <option value="Giveaway" <%= campaign.engagementType === 'Giveaway' ? 'selected' : '' %>>Giveaway</option>
            <option value="Review Program" <%= campaign.engagementType === 'Review Program' ? 'selected' : '' %>>Review Program</option>
          </select>
        </div>

        <!-- Target Audience -->
        <div class="col-md-6">
          <label>Target Audience*</label>
          <select class="form-select" name="targetAudience" required>
            <option disabled>Select Audience</option>
            <option value="Students" <%= campaign.targetAudience === 'Students' ? 'selected' : '' %>>Students</option>
            <option value="Working Professionals" <%= campaign.targetAudience === 'Working Professionals' ? 'selected' : '' %>>Working Professionals</option>
            <option value="Parents" <%= campaign.targetAudience === 'Parents' ? 'selected' : '' %>>Parents</option>
            <option value="General Public" <%= campaign.targetAudience === 'General Public' ? 'selected' : '' %>>General Public</option>
          </select>
        </div>

        <!-- Target Location -->
        <div class="col-md-6">
          <label>Target Location*</label>
          <select class="form-select" name="targetLocation" required>
            <option disabled>Select Location</option>
            <option value="Pan India" <%= campaign.targetLocation === 'Pan India' ? 'selected' : '' %>>Pan India</option>
            <option value="Tier 1 Cities" <%= campaign.targetLocation === 'Tier 1 Cities' ? 'selected' : '' %>>Tier 1 Cities</option>
            <option value="Tier 2 Cities" <%= campaign.targetLocation === 'Tier 2 Cities' ? 'selected' : '' %>>Tier 2 Cities</option>
            <option value="Tier 3 Cities" <%= campaign.targetLocation === 'Tier 3 Cities' ? 'selected' : '' %>>Tier 3 Cities</option>
          </select>
        </div>

        <!-- Submit -->
        <div class="col-12 text-center">
          <button type="submit" class="btn btn-primary px-5">Save Changes</button>
        </div>
      </form>
    </div>
  </div>
</section>


